{
  "uid": "containers-dashboard",
  "title": "Containers Monitoring",
  "tags": ["containers", "docker", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "type": "timeseries",
      "title": "Container CPU Usage (%) - IntelectGame",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=~\"/docker/.+\"}[5m]) * 100 or vector(0)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "type": "timeseries",
      "title": "Container Memory Usage - IntelectGame",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\",name!=\"/\"} or vector(0)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "id": 3,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
      "type": "timeseries",
      "title": "Container Network I/O - IntelectGame",
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{name!=\"\",name!=\"/\"}[5m]) or vector(0)",
          "legendFormat": "{{id}} - Receive",
          "refId": "A"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{name!=\"\",name!=\"/\"}[5m]) or vector(0)",
          "legendFormat": "{{id}} - Transmit",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      }
    },
    {
      "id": 4,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "type": "stat",
      "title": "Active Containers (IntelectGame)",
      "targets": [
        {
          "expr": "count(container_last_seen{name!=\"\",name!=\"/\"}) or vector(0)",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value"
      }
    },
    {
      "id": 5,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "type": "table",
      "title": "Container List (IntelectGame)",
      "targets": [
        {
          "expr": "container_last_seen{name!=\"\",name!=\"/\"} or vector(0)",
          "format": "table",
          "instant": true,
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true, "__name__": true},
            "renameByName": {
              "name": "Container Name",
              "Value": "Last Seen"
            }
          }
        }
      ]
    },
    {
      "id": 6,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "type": "timeseries",
      "title": "Container CPU Usage by Service",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name!=\"\",name!=\"/\"}[5m])) by (name) * 100 or vector(0)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      }
    },
    {
      "id": 7,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "type": "timeseries",
      "title": "Container Memory Usage by Service",
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes{name!=\"\",name!=\"/\"}) by (name) or vector(0)",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    }
  ]
}
