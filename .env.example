# Environment Variables Example
# Copy this file to .env and fill in the values

# Node Environment
NODE_ENV=production

# Service URLs (for local development)
AUTH_SERVICE_URL=http://localhost:3001
QUIZ_SERVICE_URL=http://localhost:3002
GAME_SERVICE_URL=http://localhost:3003
TELEGRAM_SERVICE_URL=http://localhost:3004

# Database
MONGODB_URI=mongodb://mongodb:27017/intelectgame

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# MinIO S3 Storage
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=game-files

# Telegram Bot (REQUIRED for telegram-bot service)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Ports
PORT=3000  # API Gateway
# PORT=3001  # Auth Service
# PORT=3002  # Quiz Service
# PORT=3003  # Game Service
# PORT=3004  # Telegram Bot

# Production Settings
# In production, these should be set via Docker environment variables or Kubernetes secrets
# Never commit .env files with real credentials to version control
